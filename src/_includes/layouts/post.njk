---
layout: layouts/base.njk
---

<article class="blog-post">
  <header class="post-header">
    <h1>{{ title }}</h1>
    <div class="post-meta">
      <time datetime="{{ date | htmlDateString }}">{{ date | readableDate }}</time>
      {% if tags %}
        <div class="post-tags">
          {% for tag in tags %}
            {% if tag != "blog" %}
              <span class="tag">{{ tag }}</span>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}
    </div>
    {% if description %}
      <p class="post-description">{{ description }}</p>
    {% endif %}
  </header>
  
  <div class="post-content">
    {{ content | safe }}
  </div>
  
  <footer class="post-footer">
    <nav class="post-navigation">
      {% if collections.blog %}
        {% set previousPost = collections.blog | getPreviousCollectionItem(page) %}
        {% set nextPost = collections.blog | getNextCollectionItem(page) %}
        
        {% if previousPost %}
          <a href="{{ previousPost.url }}" class="prev-post">
            ← {{ previousPost.data.title }}
          </a>
        {% endif %}
        
        {% if nextPost %}
          <a href="{{ nextPost.url }}" class="next-post">
            {{ nextPost.data.title }} →
          </a>
        {% endif %}
      {% endif %}
    </nav>
  </footer>
</article>
